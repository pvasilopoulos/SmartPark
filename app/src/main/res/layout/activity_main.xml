
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <Button
        android:id="@+id/new_book"
        android:layout_width="500px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="New Booking"
        android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/c_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="[Name]"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark" />

        <Button
            android:id="@+id/m_vbook"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_book"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp"
            android:text="View Booking"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/m_det"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_vbook"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="86dp"
            android:layout_marginRight="30dp"
            android:text="My Details"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/m_add_bal"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_det"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="30dp"
            android:text="Feedback"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/m_can"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_add_bal"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-180dp"
            android:layout_marginRight="30dp"
            android:text="Cancel Booking"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/logout"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_can"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="148dp"
            android:layout_marginRight="30dp"
            android:text="Logout"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</ScrollView>
