<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    >

    <EditText
        android:id="@+id/login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:focusable="true"
        android:hint="Enter your Id"
        android:shadowColor="#FFFFFF"
        android:textColor="#F8F5F5"
        android:textColorHighlight="#F8F6F6"
        android:textColorHint="@android:color/white"
        android:textColorLink="#FBFAFA">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="LOGIN"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/primary_text_dark"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#F4F3F3"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/login_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_id"
        android:layout_alignLeft="@+id/login_id"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Password"
        android:password="true"
        android:textColor="#EEF3F1"
        android:textColorHighlight="#EAE7E7"
        android:textColorHint="@android:color/tertiary_text_light"
        android:textColorLink="#A6A5A5" />

    <Button
        android:id="@+id/log_reg"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_button1"
        android:layout_alignBottom="@+id/login_button1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Register"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="16dp" />

    <Button
        android:id="@+id/login_button1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_pass"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="Login"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="16dp" />

</RelativeLayout>
